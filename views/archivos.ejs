<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Config.</title>
</head>

<body>
    <style>
        body{
            background-image: url(../pics/fondo.jpg);
        }
        .boton {
            text-decoration: none;
            background-color: rgb(83, 158, 255);
            color: white;
            margin: 5px;
            padding: 5px;
            border-radius: 5px;
        }
         hr{
             border: 2px solid #f1f1f1;
                width: 100%;
         }
         .estado{
             border:none;
             border-bottom: 2px solid #f1f1f1;
             background-color: transparent;
             margin-bottom: 15px;
             width: 80%;
         }
        td {
            padding: 10px;
            display: flex;
            justify-content: center;
            
        }
        img{
            height: 50px;
            border: 1px solid #f1f1f1;
            
        }
        video{
            height: 60px;
            border: 1px solid #f1f1f1;
            
        }
        .btn {
           position: relative;
           width: 100px;
              height: 40px;
              margin: 10px;
        }
        .btn a {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: rgba(255, 255, 255, 0.1);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 30px;
            color: #fff;
            z-index: 1;
            font-weight: 400;
            letter-spacing: 1px;
            text-decoration: none;
            overflow: hidden;
            transition: 0.5s;
            backdrop-filter: blur(15px);

        }
        .btn:hover a {
            letter-spacing: 3px;
        }
        .btn a::before{
            content:"";
            position: absolute;
            top: 0;
            left: 0;
            width: 50%;
            height: 100%;
            background: linear-gradient(to left, rgba(255, 255, 255, 0.15), transparent);
            transform: skewX(45deg) translateX(0);
            transition: 0.5s;
        }
        .btn:hover a::before{
            transform: skewX(45deg) translateX(200%);
        }
        .btn::before{
            content:"";
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            bottom:-5px;
            width: 30px;
            height: 10px;
            background: #ff1f71;
            box-shadow: 0 0 5px #ff1f71,
            0 0 15px #ff1f71,
            0 0 30px #ff1f71,
            0 0 60px #ff1f71;
            border-radius: 10px;
            transition: 0.5s;
            transition-delay: 0s;
        }
        .btn:hover::before{
            bottom: 0;
            height: 50%;
            width: 80%;
            border-radius: 30px;
            transition-delay: 0.5s;
        }
        .btn::after{
            content:"";
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            top:-5px;
            width: 30px;
            height: 10px;
            background: #ff1f71;
            box-shadow: 0 0 5px #ff1f71,
            0 0 15px #ff1f71,
            0 0 30px #ff1f71,
            0 0 60px #ff1f71;
            border-radius: 10px;
            transition: 0.5s;
            transition-delay: 0s;
        }
        .btn:hover::after{
            top: 0;
            height: 50%;
            width: 80%;
            border-radius: 30px;
            transition-delay: 0.5s;
        }
        section {
            display: flex;
            flex-direction: column;
            align-items: center;
            background: linear-gradient(to left, #da286381, #edcf8e81);
            
            border-radius: 20px;
        }
        form {
            margin: 15px;
        }
    </style>
    <section>
        <table>
            <thead>
                <tr>
                    <th>Videos Exclusivos:</th>
                </tr>
            </thead>
            <tbody>
                <% photos.forEach(photo => { %>
                <tr>
                    <td>
                        <video controls src="<%=photo.imageURL%>"></video>
                        <div class="btn">
                        <a href="/config/delete/<%=photo.id%>">Borrar</a>
                        </div>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
        <form action="/up" method="post" enctype="multipart/form-data">
            <input name="file" type="file">
            <input type="submit">
        </form>
        <hr>
        <table>
            <thead>
                <tr>
                    <th>Fotos del Banner:</th>
                </tr>
            </thead>
            <tbody>
                <% banner.forEach(photo => { %>
                    <tr>
                        <td>
                            <img src="<%=photo.imageURL%>" alt="">
                            <div class="btn">
                            <a href="/config/deleterBanner/<%=photo.id%>">Borrar</a>
                            </div>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <form action="/upBanner" method="post" enctype="multipart/form-data">
            <h3>Estado:</h3>
            <input type="text" name="estado" class="estado">
            <input name="file" type="file">
            <input type="submit">
        </form>
        <hr>
        <table>
            <thead>
                <tr>
                    <th>Fotos del Inicio:</th>
                </tr>
            </thead>
            <tbody>
                <% photoHome.forEach(photo => { %>
                    <tr>
                        <td>
                            <img src="<%=photo.imageURL%>" alt="">
                            <div class="btn">
                            <a href="/config/deleterPHome/<%=photo.id%>">Borrar</a>
                            </div>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <form action="/upPHome" method="post" enctype="multipart/form-data">
            <input name="file" type="file">
            <input type="submit">
        </form>
        <a  class="boton" href="/galeria">Volver a la Galeria</a>
    </section>
</body>

</html>